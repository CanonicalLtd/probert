#!/usr/bin/make -f

VERS=$(shell dpkg-parsechangelog | sed -rne 's,^Version: ([^-]+).*,\1,p')
export DH_VERBOSE=1
export PYBUILD_NAME=probert
export PYBUILD_DISABLE_python2=1
export PYBUILD_INSTALL_DIR=usr/share/probert/
export PYBUILD_INSTALL_ARGS_python3=--install-lib=usr/share/probert/ \
	--install-data=usr/ \
	--install-scripts=usr/share/probert/bin/ \
	--root=$(CURDIR)/debian/probert/ \
	--no-compile -O0

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_python3:
	dh_python3 --ignore-shebangs

override_dh_installinit:
	dh_installinit --no-start

override_dh_auto_test:
	@echo "No tests."

get-orig-source:
	python3 ./setup.py sdist
	cp dist/*.tar.gz ../probert_${VERS}.orig.tar.gz
	cp dist/*.tar.gz /tmp/probert_${VERS}.orig.tar.gz
	rm -rf dist
	dh_auto_clean
